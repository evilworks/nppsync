{
  "manifest_version": 2,
  "name": "NppSync",
  "version": "1.3.2",
  "description": "NppSync refreshes loaded local files when their source has been modified in notepad++.",
  "icons": {
    "128": "icon_128.png"
  },
  "page_action": {
    "default_title": "NppSync",
    "default_icon": {
      "19": "icon_19_disabled.png"
    }
  },
  "background": {
    "scripts": [
      "nppsync.js",
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://*.lh/*",
    "http://*.dev/*",
    "http://*.com/*",
    "https://localhost/*",
    "https://127.0.0.1/*",
    "https://*.lh/*",
    "https://*.dev/*",
    "https://*.com/*",
    "file:///*"
  ]
}
